function rotation= elem_rotation(axis, angle)
%Return the matrix for element rotation along an axis


if axis=="z"
    
    rotation=[cos(a) -sin(a) 0; sin(a) cos(a) 0; 0 0 1];
    
else if axis=="y"
    rotation=[cos(a) 0 sin(a); 0 1 0; -sin(a) 0 cos(b)];

else if axis=="x"
           rotation=[1 0 0; 0 cos(a) -sin(a); 0 sin(a) cos(b)];
 
    else
    error("no valid angle")
 end
        

end

